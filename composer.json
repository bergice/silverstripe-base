{
    "name": "lekoala/silverstripe-base",
    "description": "Extend base functionnality of SilverStripe",
    "type": "silverstripe-module",
    "keywords": [
        "silverstripe",
        "module",
        "cms"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "LeKoala",
            "email": "thomas@lekoala.be"
        }
    ],
    "require": {
        "php": ">=5.6",
        "silverstripe/framework": "^4.0",
        "silverstripe/siteconfig": "^4.0",
        "axllent/silverstripe-minifier": "^1.0",
        "symbiote/silverstripe-gridfieldextensions": "^3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "extra": {
        "installer-name": "base"
    },
    "autoload": {
        "psr-4": {
            "LeKoala\\Base\\": "code/",
            "LeKoala\\Base\\Test\\": "tests/"
        }
    },
    "support": {
        "issues": "https://github.com/lekoala/silverstripe-base/issues"
    },
    "scripts": {
        "lint": "phpcs code/ tests/",
        "lint-clean": "phpcbf code/ tests/"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
